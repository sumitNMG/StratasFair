@model IEnumerable<StratasFair.BusinessEntity.Front.BillTypeModel>

@{
    if (Model != null)
    {
        if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:left" data-title="BillType" class="billtype">@item.BillTypeName</td>
                    <td style="text-align:left" data-title="BillPeriod" class="billperiod">@item.BillPeriodName</td>
                    <td style="text-align:left" data-title="AddedOn" class="addedon">@item.CreatedOn</td>
                    <td style="text-align:left" data-title="Action" class="action">
                        <a href="javascript:void(0)" onclick="EditBillTypeDetails(@item.BillTypeId)" data-toggle="modal" data-target="#Edit-BillType" data-placement="bottom" title="Edit">
                            <i class="fa fa-pencil" aria-hidden="true"></i>

                        </a>
                        <a href="javascript:void(0)" onclick="DeleteBillTypeDetails(@item.BillTypeId)" data-toggle="tooltip" data-placement="bottom" title="Delete">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                    <!-- Modal  Add Reminder -->

                </tr>

            }
        }
        else
        {
            <tr>
                <td style="text-align:center" data-title="First Name" colspan="9" class="f-name">
                    <span class="text-orange">No Record Found</span>
                </td>
            </tr>
        }
    }
}
