@using StratasFair.Business.Front;
@model StratasFair.BusinessEntity.Front.ContactUsModel
@{
    Layout = null;
    ViewBag.Title = "StartasFair";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <title>StratasFair</title>
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom styling -->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/marketing-style.css")" />
    <!--Faq Accordion -->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/marketing-accordion.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/slick.css")" />
    <link href="@Url.Content("~/Content/css/sweetalert.css")" rel="stylesheet" />
    <style>
        .field-validation-error {
            color: red !important;
        }

        .input-validation-error {
            border: 1px solid red !important;
        }
    </style>
</head>
<body>
    <div class="wrapper home-page">
        <div id="top"></div>
        <div class="top-slider">
            <div class="header-section">

                <div class="container-fluid">
                    <div>
                        <div class="logo">
                            <a href="@Url.Content("~/home")">
                                Logo
                            </a>
                        </div>
                        <div class="top-nav">
                            <span class="menu-btn" onclick="openNav()">open</span>
                            <div id="mySidenav" class="sidenav">
                                <ul>
                                    <li><a href="javascript:void(0)" class="closebtn" onclick="closeNav()">x</a></li>
                                    <li><a href="#about">About Us</a></li>
                                    <li><a href="#testimonial">Testimonials</a></li>
                                    <li><a href="#feature">Features</a></li>
                                    <li><a href="#faq">Faq</a></li>
                                    <li><a href="#contact">Contact Us</a></li>
                                    <li class="login pad"><a href="@Url.Content("~/vendor/login")">Vendor Login</a></li>
                                    <li class="login"><a class="active" href="@Url.Content("~/vendor/registration")">Vendor Sign Up</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <section class="topslider slider">
                <div class="slider-box">
                    <img src="@Url.Content("~/Content/images/slider-1.jpg")" />
                </div>
                <div>
                    <img src="@Url.Content("~/Content/images/slider-2.jpg")" />
                </div>
            </section>
        </div><!-- top-slider End--->


        <div class="about-us-section" id="about">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                        <div class="title animation-element slide-bottom">About <br> Stratas<span>F</span>air </div>
                        <p>
                            @Html.Raw(HomePageHelper.Instance.GetAboutUs())
                        </p>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 about-image">
                        <img src="@Url.Content("~/Content/images/about-image.jpg")" alt="" title="" class="img-responsive">
                    </div>
                </div>
            </div>
        </div><!-- about-us-section End--->
        <div class="testimonial-section" id="testimonial">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animation-element slide-bottom">
                        <h2 class="text-white text-center">Testimonials</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @foreach (var item in HomePageHelper.Instance.GetTestimonials())
                        {
                            <section class="regular slider">
                                <div>
                                    <div class="slide-section">
                                        <div class="slide-lft">
                                            <figure>
                                                @if (!string.IsNullOrEmpty(item.ImageFile))
                                                {
                                                    <img src="@StratasFair.Common.AwsS3Bucket.AccessPath()/resources/testimonial/@item.ImageFile" alt="" title="User" />
                                                }
                                                else
                                                {
                                                    <img src="@Url.Content("~/Content/images/no-image.jpg")">
                                                }
                                            </figure>
                                            <span class="name">@item.AuthorName</span>
                                            <span class="designation">@item.Designation</span>
                                        </div>
                                        <div class="slide-rgt">
                                            <div class="cnt">
                                                <span class="top-quote"></span>
                                                @Html.Raw(item.Description)
                                                <span class="top-quote btm"></span>
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </section>
                                                break;
                        }
                    </div>
                </div>
            </div>
        </div><!-- testimonial-section End--->
        <div class="features-section" id="feature">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animation-element slide-bottom">
                        <h2 class="text-black text-center">Features</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <ul>
                            <li>
                                <figure><img src="@Url.Content("~/Content/images/alert-icon.png")"></figure>
                                <span class="title">Alert & Notification System</span>
                                <p>Send email and text about property maintenance, safety concerns, rule changes, etc.</p>
                            </li>
                            <li>
                                <figure><img src="@Url.Content("~/Content/images/polling-icon.png")"></figure>
                                <span class="title">Polling & Voting System </span>
                                <p>Electing new board members? Changing by-laws? Gauging satisfaction? Do it all here!</p>
                            </li>
                            <li>
                                <figure><img src="@Url.Content("~/Content/images/message-board-icon.png")"></figure>
                                <span class="title">Public & Private Message Boards </span>
                                <p>Increase communication between tenants and owners in your community or plaza.</p>
                            </li>
                            <li>
                                <figure><img src="@Url.Content("~/Content/images/general-property-icon.png")"></figure>
                                <span class="title">General Property Information Page</span>
                                <p>Do you know what your property by-laws are? Can you easily access meeting minutes? We’ve got a section for that.</p>
                            </li>
                            <li>
                                <figure><img src="@Url.Content("~/Content/images/vendor-icon.png")"></figure>
                                <span class="title">Vendor Quotes</span>
                                <p>Do you need a plumber, landscaper, electrician, pool cleaner etc? Request multiple quotes here to ensure you’re getting value for your dollar.</p>
                            </li>
                            <li>
                                <figure><img src="@Url.Content("~/Content/images/accounting-icon.png")"></figure>
                                <span class="title">Accounting & Reporting</span>
                                <p>Balance Sheet, Income Statement, Receipts, Interim and Annual Reporting</p>
                            </li>
                            <li>
                                <figure><img src="@Url.Content("~/Content/images/public-space-icon-icon.png")"></figure>
                                <span class="title">Public Space Bookings </span>
                                <p>Book your time for the pool, conference room, etc.</p>
                            </li>
                            <li>
                                <figure><img src="@Url.Content("~/Content/images/general-property-icon.png")"></figure>
                                <span class="title">Annual Updates</span>
                                <p>StatasFair will be adding features annually based on our customers’ needs. </p>
                            </li>
                        </ul>
                        <p>Join StratasFair today and reduce your property management cost by 50% or more! </p>
                    </div>
                </div>
            </div>
        </div><!-- features-section End--->
        <div class="faq-section" id="faq">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animation-element slide-bottom">
                        <h2 class="text-black text-center">Faq</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <ul class="responsive-accordion responsive-accordion-default bm-larger">
                            @foreach (var item in HomePageHelper.Instance.GetFAQs())
                            {
                                <li>
                                    <div class="responsive-accordion-head">@item.Question</div>
                                    <div class="responsive-accordion-panel">
                                        @Html.Raw(item.Answer)
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- faq-section End--->
        <div class="contact-section" id="contact">
            @using (Ajax.BeginForm("contactus", "home", new AjaxOptions()
    {
        HttpMethod = "post",
        OnBegin = "showLoader",
        OnComplete = "hideLoader"
    }))
            {
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animation-element slide-bottom">
                            <h2 class="text-white text-center">Contact Us</h2>
                            <div class="sub-title text-white text-center">We guarantee a reply within 48 hours. </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label>First Name<span class="required">*</span></label>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label>Email Address<span class="required">*</span></label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label>Message<span class="required">*</span></label>
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control",@rows="5",@style="height:auto" })
                                @Html.ValidationMessageFor(m => m.Message)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="text-center col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
                            <div class="form-group">
                                <input name="submit" id="submit" value="Submit" class="btn btn-sm btn-block btn-yellow" type="submit" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="contact-bottom">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <ul>
                                @foreach (var item in HomePageHelper.Instance.GetAdvertisement())
                                {
                                    <li class="animation-element slide-bottom">
                                        <a href="@item.RedirectionUrl" target="_blank">
                                            <img src="@StratasFair.Common.AwsS3Bucket.AccessPath()/resources/advertisement/@item.ImageFile" />
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- contact-section End--->

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 copyright">&copy; Copyrigtht @DateTime.UtcNow.Year <a href="@Url.Content("~/home")">StratasFair</a></div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 social-link">
                        <ul>
                            <li><a href="javascript:void(0);" class="facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="javascript:void(0);" class="twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="javascript:void(0);" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="cl"></div>
            </div>
        </footer><!-- footer End--->
        <a href="javascript:void(0);" class="scrollToTop"><i class="fa fa-arrow-circle-up" aria-hidden="true"></i></a>
    </div><!-- wrapper End--->
    <script src="@Url.Content("~/Content/js/jquery.min.js")"></script>
    <!-- Faq Accordion -->
    <script src="@Url.Content("~/Content/js/slick.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script src="@Url.Content("~/Content/js/responsive-accordion.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/slick.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/sweetalert.js")"></script>
    <script>
        $(document).ready(function () {
            $(".regular").slick({
                dots: true,
                infinite: false,
                slidesToShow: 1,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,
                prevArrow: false,
                nextArrow: false
            });
            $('.topslider').slick({
                autoplay: true,
                autoplaySpeed: 8000,
                draggable: false,
                fade: true,
                dots: true
            });
            $(window).scroll(function () {
                var scroll = $(window).scrollTop();
                if (scroll >= 20) {
                    $(".header-section").addClass("fixed");
                } else {
                    $(".header-section").removeClass("fixed");
                }
            });
            // Add smooth scrolling to all links
            $("a").on('click', function (event) {

                // Make sure this.hash has a value before overriding default behavior
                if (this.hash !== "") {
                    // Prevent default anchor click behavior
                    event.preventDefault();

                    // Store hash
                    var hash = this.hash;

                    // Using jQuery's animate() method to add smooth page scroll
                    // The optional number (800) specifies the number of milliseconds it takes to scroll to the specified area
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 1500, function () {

                        // Add hash (#) to URL when done scrolling (default click behavior)
                        window.location.hash = hash;
                    });
                } // End if
            });
            //Click event to scroll to top
            $('.scrollToTop').click(function () {
                $('html, body').animate({ scrollTop: 0 }, 800);
                return false;
            });
        });
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }
        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }

        var $animation_elements = $('.animation-element');
        var $window = $(window);

        function check_if_in_view() {
            var window_height = $window.height();
            var window_top_position = $window.scrollTop();
            var window_bottom_position = (window_top_position + window_height) - 100;

            $.each($animation_elements, function () {
                var $element = $(this);
                var element_height = $element.outerHeight();
                var element_top_position = $element.offset().top;
                var element_bottom_position = (element_top_position + element_height);

                //check to see if this current container is within viewport
                if ((element_bottom_position >= window_top_position) &&
                    (element_top_position <= window_bottom_position)) {
                    $element.addClass('in-view');
                } else {
                    $element.removeClass('in-view');
                }
            });
        }
        $window.on('scroll resize', check_if_in_view);
        $window.trigger('scroll');

        function showLoader() {
            $("#submit").val("Please wait...").prop("disabled", true);
        }
        function hideLoader(result) {
            $("#submit").val("Submit").prop("disabled", false);
            $("#FirstName").val("");
            $("#Email").val("");
            $("#Message").val("");

            var msgType = "Success";
            var msg = "Your request has been received. We will contact you shortly!";
            if (result == -1) {
                msgType = "Error";
                msg = "Request could not be sent. Please try again later!";
            }
            swal({
                text: msg,
                title: msgType,
                type: msgType.toLowerCase()
            });
        }
    </script>
</body>
</html>