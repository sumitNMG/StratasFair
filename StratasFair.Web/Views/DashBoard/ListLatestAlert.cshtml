@model IEnumerable<StratasFair.BusinessEntity.Front.AlertAndNotificationModel>


@{
    if (Model != null)
    {
        if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                if (@item.MessageType == 1)
                {
                    <li class="emergency-alert">
                        <div class="responsive-accordion-head">
                            <i></i>
                            <span class="title">@item.Title</span>
                            <span class="date">@item.CreatedOn.Replace(",", "")</span>
                        </div>
                        <div class="responsive-accordion-panel" style="display: none;">
                            <p>
                                @item.Message
                            </p>
                        </div>
                    </li>
                }
                else
                {
                    <li>
                        <div class="responsive-accordion-head">
                            <i></i>
                            <span class="title">@item.Title</span>
                            <span class="date">@item.CreatedOn.Replace(",", "")</span>
                        </div>
                        <div class="responsive-accordion-panel" style="display: none;">
                            <p>
                                @item.Message
                            </p>
                        </div>
                    </li>
                }
            }
        }
    }
}