@model StratasFair.BusinessEntity.Front.VendorLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Strats Fair Vendor Login</title>
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/responsive.css")" rel="stylesheet" type="text/css" />
    <style>
        .field-validation-error{color:red !important;}
        .input-validation-error{border:1px solid red !important;}
    </style>
</head>
<body>
    <div class="wrapper">
        <header class="login">
            <div class="container">
                <div class="login-logo">
                    <a href="@Url.Content("~/home")"><img src="@Url.Content("~/Content/images/login-logo.png")" alt="" title="" /></a>
                </div>
            </div>
        </header><!-- header End -->
        <div class="login-body">
            <div class="container">
                <div class="login-box">
                    <div class="login-wrapper">
                        @using (Html.BeginForm("login","vendor", FormMethod.Post, new { @class = "login-form" }))
                        {
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <h1>Vendor Login</h1>
                                </div>
                            </div>
                            <div class="row">
                                @if (TempData["Message"] != null)
                                {
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert-box">
                                        @Html.Raw(TempData["Message"].ToString())
                                    </div>
                                }
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label>Email Address</label>
                                        @Html.TextBoxFor(m => m.EmailId, new { @type = "email", @class = "form-control"})
                                        @Html.ValidationMessageFor(m => m.EmailId)
                                    </div>
                                    <div class="form-group information">
                                        <label>Password</label>
                                        @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control"})
                                        <div class="information-icon">
                                            <a href="javascript:void(0)"><img src="@Url.Content("~/Content/images/information-icon.png")"></a>
                                            <div class="information-box">
                                                Good passwords are hard to guess. Use uncommon words or inside jokes, non-standard uPPercasing, creative spelllling, and non-obvious numbers and symbols.
                                            </div>
                                        </div>
                                        <div>@Html.ValidationMessageFor(m => m.Password)</div>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <input type="checkbox" id="chkRemember" @if(Model.RememberMe){@Html.Raw("checked")} />
                                            <label for="chkRemember">Remember Me</label>
                                        </div>
                                        @Html.HiddenFor(m => m.RememberMe,new{@value="true"})
                                    </div>
                                    <div class="form-group">
                                        <input name="Login" value="Log in" class="btn btn-lg btn-block btn-yellow" type="submit">
                                    </div>
                                    <div class="form-group">
                                        @Html.ActionLink("Sign Up", "registration", new { controller = "vendor" }, new { @style = "float:right" })<br />
                                        @Html.ActionLink("Forgot Password ?", "forgotpassword", new { controller = "vendor" }, new { @style = "float:right" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div><!-- login-body End -->
        <footer class="login">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 copyright">&copy; Copyrigtht 2017 <a href="#">StratasFair</a></div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-right social-link">
                        <ul>
                            <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="cl"></div>
            </div>
        </footer><!-- footer End -->
        <div class="clearfix"></div>
    </div><!-- wrapper End -->
    <script src="@Url.Content("~/Content/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
    <script>
        $(function () {
            $("#chkRemember").click(function () {
                var isRemember = $("#chkRemember").is(":checked");
                $("#RememberMe").val(isRemember);
            });
        })
    </script>
</body>
</html>