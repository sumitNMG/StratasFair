@using StratasFair.Business.Front;
@{
    ViewBag.Title = "Strats Fair Manage Quotation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageHeading = "Manage Quotation";
    var QuotationList = (ViewBag.Quotations as List<StratasFair.BusinessEntity.VendorQuotationModel>);
}

@section styles{
    <!-- Accordion -->
    <link href="@Url.Content("~/Content/css/responsive-accordion.css")" rel="stylesheet" type="text/css">
    <!-- Custom styling plus plugins -->
    <link href="@Url.Content("~/Content/css/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/custom.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/bootstrap-select.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/responsive.css")" rel="stylesheet" />
}

<div class="table-section manage-vendor-table">
    <table cellpadding="0" cellspacing="0" border="0">
        <thead>
            <tr>
                <td class="board-name">Strata Board</td>
                <td class="requester">Requester Name</td>
                <td class="email-id">Email Address</td>
                <td class="details">Details</td>
                <td class="discipline">Discipline</td>
                <td class="action">Action</td>
            </tr>
        </thead>
        <tbody>
            @if (QuotationList != null)
            {
                if (QuotationList.Count > 0)
                {
                    foreach (var item in QuotationList)
                    {
                        <tr>
                            <td data-title="Strata Board" class="board-name">@item.StrataBoardName</td>
                            <td data-title="Requester Name" class="requester">@item.RequesterName</td>
                            <td data-title="Email Address" class="email-id">
                                @if (item.IsShowEmail == true)
                                {
                                    <a href="mailto:@item.RequesterEmailId" style="color:orange">@item.RequesterEmailId</a>
                                }
                            </td>
                            <td data-title="Details" class="details">
                                <p>@Html.Raw(item.Details)</p>
                            </td>
                            <td data-title="Discipline" class="discipline">
                                @item.DisciplineName
                            </td>
                            <td data-title="Action" class="action">
                                <a data-toggle="tooltip" data-placement="top" title="" data-original-title="Private Message Board" href="@Url.Content("~/vendor/pmb/"+item.QuotationId)">
                                    <i class="fa fa-weixin" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No record found</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No record found</td>
                </tr>
            }
        </tbody>
    </table>
</div><!-- table section End -->
@section scripts
    {
    <script src="@Url.Content("~/Content/js/jquery-ui.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/js/custom.min.js")"></script>
    <script src="@Url.Content("~/Content/js/script.js")"></script>
    <script src="@Url.Content("~/js/bootstrap-select.min.js")"></script>
    <script src="@Url.Content("~/Content/js/responsive-accordion.min.js")" type="text/javascript"></script>
}

