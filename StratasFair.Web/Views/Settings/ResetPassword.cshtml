
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}
@model StratasFair.BusinessEntity.Front.ClientChangePassword
@section scripts{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}

@section styles{     
    <link href="~/Content/css/DevStyle.css" rel="stylesheet" />
}


<!-- page content -->
<div class="right_col" role="main">
    <div class="page-title">
        @if (TempData["CommonMessage"] != null)
        {
            @Html.Raw(TempData["CommonMessage"])
        }
        <div class="title_left">
            <h1>Reset Password</h1>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <form action="" class="form-section" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label>Old Password <span class="required">*</span></label>
                            @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", @type = "password" })
                            @Html.ValidationMessageFor(m => m.OldPassword)
                        </div>
                        <div class="form-group">
                            <label>New Password  <span class="required">*</span></label>
                            @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @type = "password" })
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                        <div class="form-group">
                            <label>Confirm Password <span class="required">*</span></label>
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                        <div class="form-group">
                            <input name="Submit" value="Submit" class="btn btn-lg btn-block btn-yellow" type="submit">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div><!-- page content End -->
<!-- Modal Add Account -->
<div class="modal fade" id="succes-message" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content modal-popup add-request">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">X</button>
            </div>
            <div class="modal-body">
                <h5 class="text-center text-light-green">successfully</h5>
                <h5 class="text-center text-pink">Error</h5>
                <p>@TempData["CommonMessage"]</p>
            </div>
        </div>
    </div>
</div><!-- Modal Add Account End -->

