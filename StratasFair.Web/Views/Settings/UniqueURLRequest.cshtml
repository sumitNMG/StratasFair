@{
    ViewBag.Title = "UniqueURLRequest";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}
@model StratasFair.BusinessEntity.Front.RequestPortalLinkModel

@section scripts{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}
@section styles{
    <link href="~/Content/css/DevStyle.css" rel="stylesheet" />
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="page-title">
        @if (TempData["CommonMessage"] != null)
        {
            @Html.Raw(TempData["CommonMessage"])
        }
        <div class="title_left">
            <h1>Unique URL Request</h1>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-xs-12 setting-profile">
            <form action="" class="form-section" method="post">
                @{
                    bool @read = (Model.RequestCounter == 1 || Model.TotalUser > 1) ? true : false;
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label>Assigned URL<span class="required">*</span></label>
                                @Html.TextBoxFor(m => m.PortalLink, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>

                    if (@read)
                    {
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label>Unique URL<span class="required">*</span></label>
                                    @Html.TextBoxFor(m => m.RequestPortalLink, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(m => m.RequestPortalLink)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label>Message<span class="required">*</span></label>
                                    @Html.TextAreaFor(m => m.RequestMessage, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(m => m.RequestMessage)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-center col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
                                <div class="form-group">
                                    <input name="submit" value="Submit" class="btn btn-sm btn-block btn-yellow" disabled="disabled" type="submit">
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label>Unique URL<span class="required">*</span></label>
                                    @Html.TextBoxFor(m => m.RequestPortalLink, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.RequestPortalLink)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label>Message<span class="required">*</span></label>
                                    @Html.TextAreaFor(m => m.RequestMessage)
                                    @Html.ValidationMessageFor(m => m.RequestMessage)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-center col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
                                <div class="form-group">
                                    <input name="submit" value="Submit" class="btn btn-sm btn-block btn-yellow" type="submit">

                                </div>
                            </div>
                        </div>

                    }
                }
            </form><!-- Form End -->
        </div><!-- table section End -->
    </div>
</div><!-- page content End -->
