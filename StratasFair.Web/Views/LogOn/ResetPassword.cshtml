
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LoggedInClientUser.cshtml";
}
@model StratasFair.BusinessEntity.Front.ClientChangePassword

<div class="login-body">
    <div class="container">
        <div class="login-box">
            <div class="login-wrapper">
                @using (Html.BeginForm("resetpassword", "Logon", new { model = Model }, FormMethod.Post, new { @class = "login-form", role = "form", @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <h1>Reset Password</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group information">
                                @Html.Label("New Password")
                                @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(m=>m.NewPassword)
                                <div class="information-icon">
                                    <a href="javascript:void(0)"><img src="~/Content/images/information-icon.png"></a>
                                    <div class="information-box">
                                        Good passwords are hard to guess. Use uncommon words or inside jokes, non-standard uPPercasing, creative spelllling, and non-obvious numbers and symbols.
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Confirm Password")
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                            <div class="form-group">
                                <input name="submit" value="Submit" class="btn btn-lg btn-block btn-yellow" type="submit">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div><!-- login-body End -->

