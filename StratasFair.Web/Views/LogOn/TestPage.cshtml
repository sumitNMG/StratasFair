
@{
    ViewBag.Title = "TestPage";
    Layout = "~/Views/Shared/_LoggedInClientUser.cshtml";
}

<script>
    var readURL = function (input) {
      
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
              
                $('.profile-pic').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

   
       

    function TestMe(input) {
        readURL(input);
    }

   

</script>
<h2>TestPage</h2>
<img class="profile-pic" src="~/Content/images/profile-image.png">
<input type="file" id="file" name="file"  accept="image/*" onchange="TestMe(this)" />



