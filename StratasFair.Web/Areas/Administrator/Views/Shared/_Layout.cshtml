@using StratasFair.Business.Admin
@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <noscript>
        <meta http-equiv="refresh" content="0;URL=@Url.Content("~/nojavascript")" />
    </noscript>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js" type="text/javascript"></script>

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/bootstrap/css/bootstrap.min.css")" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/dist/css/AdminLTE.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/dist/css/skins/_all-skins.min.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/plugins/iCheck/flat/blue.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/plugins/morris/morris.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/plugins/jvectormap/jquery-jvectormap-1.2.2.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/plugins/datepicker/datepicker3.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/plugins/daterangepicker/daterangepicker-bs3.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css")" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="@Url.Content("~/securehost/rootlogin/dashboard")" class="logo">
                <span class="logo-mini"><b>SF</b></span>
                <span class="logo-lg"><b>StratasFair</b></span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@Url.Content("~/Areas/Administrator/Content/dist/img/user2-160x160.jpg")" class="user-image" alt="User Image" />
                                <span class="hidden-xs">@Html.Raw(AdminSessionData.AdminName)</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="@Url.Content("~/Areas/Administrator/Content/dist/img/user2-160x160.jpg")" class="img-circle" alt="User Image" />
                                    <p>
                                        @Html.Raw(AdminSessionData.AdminName)
                                    </p>
                                </li>

                                <!-- Menu Footer-->

                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="@Url.Content("~/securehost/rootlogin/profile")" class="btn btn-default btn-flat">Update Profile</a>
                                    </div>

                                </li>

                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="@Url.Content("~/securehost/rootlogin/changepassword")" class="btn btn-default btn-flat">Change Password</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="@Url.Content("~/securehost/rootlogin/signout")" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>


                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="@Url.Content("~/Areas/Administrator/Content/dist/img/user2-160x160.jpg")" class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p>@Html.Raw(AdminSessionData.AdminName)</p>
                    </div>
                </div>
                @Html.Partial("_LeftNavigation")
            </section>
        </aside>
        <!-- common message -->

        <div class="content-wrapper">
            @if (TempData["CommonMessage"] != null)
            {
                @Html.Raw(TempData["CommonMessage"])
            }
            @RenderBody()
        </div>
        @Html.Partial("_Footer")

    </div>


    @RenderSection("ModelPopUp", required: false)
    <script src="@Url.Content("~/Scripts/modernizr-2.8.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/respond.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
    <script src="@Url.Content("~/Areas/Administrator/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Areas/Administrator/Content/dist/js/app.min.js")"></script>
    <script src="@Url.Content("~/Areas/Administrator/Content/dist/js/demo.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


    <script>
        $(document).ready(function () {
            $('.sidebar-menu li ul li a').each(function (i, e) {
                if ($('#' + e.id + '-photofilm').length) $(e).addClass('active-vimeo');
            });
        })

        jQuery(window).load(function () {
            //Code to add highlight current child and parent menu and keep them open.//
            var url = window.location.href.toLowerCase();
           
            if (url.indexOf("/client") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/client";
            }
            else if (url.indexOf("/cms") > -1 ) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/cms";
            }
           
            else if (url.indexOf("/faq") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/faq";
            }
            else if (url.indexOf("/discipline") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/discipline";
            }
            else if (url.indexOf("/testimonial") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/testimonial";
            }
            else if (url.indexOf("/emailtemplate") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/emailtemplate";
            }
            else if (url.indexOf("/vendor") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/vendor";
            }
            else if (url.indexOf("/role") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/role/list";
            }
            else if (url.indexOf("/user") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/user/list";
            }
            else if (url.indexOf("/subscription") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/subscription";
            }
            else if (url.indexOf("/settings") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/settings";
            }
            else if (url.indexOf("/contactus") > -1) {
                url = "@System.Configuration.ConfigurationManager.AppSettings["WebsiteRootPath"]" + "securehost/rootlogin/report/contactus";
            }

            if (url.indexOf("/index") || url.indexOf("/list") != -1) {
                $('li.active').closest("ul.treeview-menu>li.active").removeClass("active");
                $('a[href="' + url + '"]').closest("li").addClass("active");
            }
            $('li.active').closest("li.treeview").addClass("active");
            //End Of Code.//

            $('.MyTooltip').tooltip({
                placement: "top",
                template: '<div class="tooltip" role="tooltip"><div class="tooltip-arrow"></div><div class="tooltip-inner large"></div></div>'
            });
        })
    </script>
    <style>
        .large.tooltip-inner {
            max-width: 500px;
            min-width: 200px;
            text-align: justify;
            padding: 15px;
            z-index: 9999999;
        }

        .small.tooltip-inner {
            max-width: 500px;
            text-align: justify;
            padding: 10px;
            font-size: 12px;
            font-weight: bold;
            z-index: 9999999;
        }
    </style>



</body>
</html>
