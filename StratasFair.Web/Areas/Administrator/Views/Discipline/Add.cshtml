@model StratasFair.BusinessEntity.DisciplineModel

@{
    ViewBag.Title = "Add Discipline";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Manage Vendor Discipline
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/securehost/rootlogin/dashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Manage Vendor Discipline</li>
    </ol>
    <div class="top-buttons-container">
        <a href="@Url.Content("~/securehost/rootlogin/discipline")" class="btn btn-success">View</a>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">
                    Add Discipline
                </h3>
            </div>
            <div class="row"></div>
            @using (Html.BeginForm("Add", "Discipline", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="box-body fix-width">

                    <div class="row">
                        <div class="form-group col-md-6">
                            @Html.Label("Discipline Name")
                            <span class="asterisk">*</span>
                            @Html.TextBoxFor(m => m.DisciplineName, new { @class = "form-control", @placeholder = "Discipline Name", @maxlength = "100" })
                            @Html.ValidationMessageFor(m => m.DisciplineName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.Status)<br />
                            @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.StatusList, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Status)
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                    <a href='@Url.Content("~/securehost/rootlogin/discipline")' class="btn btn-warning">
                        Cancel
                    </a>
                </div>

            }
        </div>
    </div>
</section>


@section scripts{
    <script type="text/javascript" language="javascript">

    </script>
}



