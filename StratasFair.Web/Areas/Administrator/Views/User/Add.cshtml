@model StratasFair.BusinessEntity.Admin.UserModel
@{
    ViewBag.Title = "Add Admin User";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="@Url.Content("~/Areas/Administrator/Content/plugins/datepicker/datepicker3.css")" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<section class="content-header">
    <h1>
        Manage User
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/securehost/rootlogin/dashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Manage User</li>
    </ol>
    <div class="top-buttons-container">
        <a href="@Url.Content("~/securehost/rootlogin/user/list")" class="btn btn-success">View</a>
        <a href="@Url.Content("~/securehost/rootlogin/user/add")" class="btn btn-info">Add</a>
    </div>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">
                    Add Admin User
                </h3>
            </div>

            @using (@Html.BeginForm())
            {
                <input type="hidden" value="@Model.RoleId" id="hidRoleId" name="hidData" />

                <div class="box-body" style="width: 50%;">
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName)
                        <span class="asterisk">*</span>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Enter first name", @maxlength = "20" })
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName)
                        <span class="asterisk">*</span>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Enter last name", @maxlength = "20" })
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.EmailId)
                        <span class="asterisk">*</span>
                        @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @type = "email", @placeholder = "Enter email", @maxlength = "100" })
                        @Html.ValidationMessageFor(m => m.EmailId)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LoginId) <span class="asterisk">*</span>
                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Enter Login ID", @maxlength = "50" })
                        @Html.ValidationMessageFor(m => m.LoginId)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)<span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", value = Model.Password, @placeholder = "Enter password", @maxlength = "20" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword) <span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", value = Model.Password, @placeholder = "Enter confirm password", @maxlength = "20" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>

                    <div class="form-group">
                        @Html.Label("Gender")<br />

                        @Html.RadioButtonFor(model => model.Gender, "M", new { @checked = true, @name = "rdoGender" }) Male
                        @Html.RadioButtonFor(model => model.Gender, "F", new { @name = "rdoGender" }) Female
                        @Html.ValidationMessageFor(m => m.Gender)
                    </div>

                    <div class="form-group">
                        @Html.Label("DOB")
                        <br />
                        @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @id = "datepicker", @name = "txtDOB", @onpaste = "return false;", @ondragstart = "return false;", @ondrop = "return false;" })
                        @Html.ValidationMessageFor(m => m.DOB)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ListRole)
                        @Html.DropDownListFor(m => m.RoleId, new SelectList(Model.ListRole, "RoleId", "RoleName"), new { @id = "ddlUserRole", @name = "my-dropdown", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>
                            Status
                        </label>
                        @Html.DropDownListFor(m => m.Status, new SelectList(Model.ListStatus, "Value", "Text"), new { @id = "drpIsActive", @name = "my-dropdown-status", @class = "form-control" })
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                    <a href="@Url.Content("~/securehost/rootlogin/user/list")" class="btn btn-warning">
                        Cancel
                    </a>
                </div>

            }
        </div>
    </div>
</section>
@section scripts{

    <!-- bootstrap datepicker -->
    <script src="~/Areas/Administrator/Content/plugins/datepicker/bootstrap-datepicker.js"></script>

    <script language="javascript" type="text/javascript">

        //Date picker
        $('#datepicker').datepicker({
            autoclose: true
        });

        $(document).ready(function () {
        var roleId = $('#hidRoleId').val(); if (roleId == 1) {
            $("#drpIsActive").attr('disabled', 'disabled');
        }
    });
    </script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Administrator/Content/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Administrator/Content/js/AdminLTE/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
}