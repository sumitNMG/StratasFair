        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@StratasFair.Business.CommonHelper.CommonData.FetchDataCounters("testimonial")</h3>
                    <p>Testimonials</p>
                </div>
                <div class="icon">
                    <i class="fa fa-fw fa-cubes"></i>
                </div>
                <a href="@Url.Content("~/securehost/rootlogin/testimonial")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@StratasFair.Business.CommonHelper.CommonData.FetchDataCounters("subscription")</h3>
                    <p>Subscription</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="@Url.Content("~/securehost/rootlogin/subscription")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@StratasFair.Business.CommonHelper.CommonData.FetchDataCounters("vendor")</h3>
                    <p>Vendors</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="@Url.Content("~/securehost/rootlogin/vendor")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>


    @*@if (@StratasFair.Business.Admin.AdminSessionData.AdminRoleName.ToLower().Trim() == "super admin")
    {*@
        <div class="row">
            <div class="col-md-6">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Subscription expiring this month</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>

                    @if (@Model.StrataBoardExpiringList != null && @Model.StrataBoardExpiringList.Count > 0)
                    {
                     <!-- /.box-header -->
                        <div class="box-body">
                            <div class="table-responsive">
                                <table class="table no-margin">
                                    <thead>
                                        <tr>
                                            <th>Strata Name</th>
                                            <th>Subscription Name</th>
                                            <th>Expiring On</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var i in @Model.StrataBoardExpiringList)
                                        {
                                            <tr>
                                                <td>@i.StratasBoardName </td>
                                                <td>@i.SubscriptionName </td>
                                                <td>@Convert.ToDateTime(@i.ExpiryDate).ToString("dd MMM yyyy")</td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
           
                        <div class="box-footer clearfix">
                            <a href="@Url.Content("~/securehost/rootlogin/client")" class="btn btn-sm btn-default btn-flat pull-right">View All StratasBoards</a>
                        </div>
        
                    }
                    else
                    {
                        <div class="box-body">
                            <div class="table-responsive">
                                No records found
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
