@model StratasFair.BusinessEntity.Admin.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .style1 {
        height: 30px;
    }

    .style2 {
        height: 39px;
    }

    .style3 {
        height: 127px;
    }
</style>


<section class="content-header">
    <h1>
        Change Password
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">


        <li><a href="@Url.Content("~/securehost/rootlogin/dashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Change Password</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box box-primary">
            @using (Html.BeginForm())
            {
                <div class="box-body" style="width: 50%;">
                    <div class="form-group">
                        @Html.Label("Old Password")
                        <span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "Enter old password", @maxlength = "20" })
                        @Html.ValidationMessageFor(m => m.OldPassword)
                    </div>
                    <div class="form-group">
                        @Html.Label("New Password")
                        <span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Enter new password", @maxlength = "20" })
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                    <div class="form-group">
                        @Html.Label("Re-Type New Password")
                        <span class="asterisk">*</span>
                        @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", @placeholder = "Enter confirm new password", @maxlength = "20" })
                        @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</section>
@section scripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="@Url.Content("~/Areas/Administrator/Content/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Administrator/Content/js/AdminLTE/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Administrator/Content/plugins/jQuery/jQuery-2.1.4.min.js")"></script>
}