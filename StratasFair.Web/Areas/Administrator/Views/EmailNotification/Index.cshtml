@model StratasFair.BusinessEntity.Admin.EmailNotificationModel

@{
    ViewBag.Title = "Email Notification";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<section class="content-header">
    <h1>
        Manage Admin Email Notification Settings
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Content("~/securehost/rootlogin/DashBoard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Manage Admin Email Notification Settings</li>
    </ol>
</section> 
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">
                    Set Admin Email Notification Settings
                </h3>
            </div>
            <div style="clear:both"></div>
            <div class="col-md-6">
                @using (@Html.BeginForm())
                {
                    <div class="box-body fix-width">
                        @Html.HiddenFor(m => m.AdminEmailNotificationSettingId)
                        <div class="form-group">
                            @Html.Label("Email Address") (comma seperated email address)
                            <span class="asterisk">*</span>
                            @Html.TextAreaFor(m => m.EmailAddress, new { @class = "form-control", @maxlength = "250" })
                            @Html.ValidationMessageFor(m => m.EmailAddress)

                        </div>
                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">
                            Submit
                        </button>
                    </div>

                }
            </div>
            <div style="clear:both"></div>
        </div>
    </div>
</section>
@section scripts{
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}








